<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".livePage"
    android:orientation="vertical"
    android:background="#29274C"
    >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/space_1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@mipmap/live1"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/nasalive_bg"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:alpha="0.5"
            android:background="#FFFFFF"
            android:gravity="bottom"
            android:layout_marginTop="125dp">

            <TextView
                android:id="@+id/nasa_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/inter_extrabold"
                android:gravity="top"
                android:text="NASA Live"
                android:textColor="#000000"
                android:textSize="14sp"
                android:translationY="-22dp" />

            <TextView
                android:id="@+id/all_times_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/inter_extrabold"
                android:gravity="top"
                android:text="All times U.S. Eastern Daylight Time, which equates to UTC-4."
                android:textColor="#000000"
                android:textSize="11sp" />

        </RelativeLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/next_live_e"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="  NEXT LIVE EVENTS"
        android:gravity="center_vertical"
        android:fontFamily="@font/inter_extrabold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="#1AFFFFFF"
        />
    <TextView
        android:id="@+id/wednesday_s"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="  Wednesday, Sept. 20\n 1 p.m. – Media teleconference on NASA’s Deep Space Optical Communications technology demonstration"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="top"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@mipmap/live2"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="  UPCOMING EVENTS"
        android:gravity="center_vertical"
        android:fontFamily="@font/inter_extrabold"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="#1AFFFFFF"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="  Wednesday, Sept. 20\n 1 p.m. – Media teleconference on NASA’s Deep Space Optical Communications technology demonstration"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="top"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="  Sunday, Sept. 24\n 10 a.m. — Live coverage of NASA's OSIRIS-REx asteroid sample return\n 5 p.m. — Media briefing on NASA's OSIRIS-REx asteroid sample return"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="top"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:text="  Tuesday, Sept. 26\n 6:35 a.m. – ISS Expedition 69 in-flight event with Scandinavian schools and European Space Agency commander Andy Mogensen\n 9:40 a.m. – ISS Expedition 69 and 70 change of command ceremony"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:gravity="top"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="  Thursday, Sept. 28\n 8:15 a.m. – ISS Expedition 70 in-flight event with industry stakeholders in Denmark and European Space Agency commander Andy Mogensen"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="top"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:text="  Wednesday, Oct.11\n 11 a.m. – News conference on NASA's OSIRIS-REx asteroid sample reveal"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:gravity="top"
            />

    </LinearLayout>
    </ScrollView>

</LinearLayout>